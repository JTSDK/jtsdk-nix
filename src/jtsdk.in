}

# GENERATE BUILD LISTS FROM SOURCEFORGE SVN ------------------------------------
generate_build_lists() {

# check that each menu is present, if not, regenerate it
if [[ ! -f $CFG/time-stamp ]] || [[ ! -f $CFG/dev_list.txt ]] || \
[[ ! -f $CFG/ga_rc_list.txt ]] || [[ ! -f $CFG/sb_dev_list.txt ]] || \
[[ ! -f $CFG/sb_ga_rc_list.txt ]] || [[ ! -f $CFG/maint_list.txt ]] || \
[[ $(find $CFG/time-stamp -mmin +$GENTIME) != "" ]]
then

	# these branches are not supported by the Superbuild script
	dev_exclude_array=('wsjtx-1.3' 'wsjtx-1.4' 'wsjtx_k1jt_p1' 'wsjtx-superbuild' 'wsjtx_w')

	clear ||:
	echo '-----------------------------------------------------------'
	echo -e "${C_G}"' JTSDK Dynamic Menus From Sourceforge'"${C_NC}"
	echo '-----------------------------------------------------------'
	echo ''
	echo ' This function updates several JTSDK menus from the'
	echo ' Sourceforge WSJT repository ^/tags and ^/branches.'
	echo ''
	echo ' When the event timer is reached, JTSDK will automatically'
	echo ' update the menu entries the next time it is launched.'
	echo ' The default update interval is set to [ 60 ] minutes'
	echo ''
	echo ' You can change the update frequency by editing the main'
	echo ' JTSDK script: /usr/bin/jtsdk or /usr/local/bin/jtsdk'
	echo ' and adjusting: GENTIME="60" variable. This variable'
	echo ' must not be blank, and should be stated in minutes.'
	echo ''
	echo ' Please be patient while the update runs, this can'
	echo ' take a few seconds depending on your internet speed'
	echo ' and access to Sourceforge'
	echo ''
	echo 'Contacting SourceForge'

# Generate Dev ists ------------------------------------------------------------
	if [[ ! -f $CFG/dev_list.txt ]] || [[ ! -f $CFG/time-stamp ]] ; then
		UTYPE='Generating'
	else 
		UTYPE='Updating'
	fi
	echo -e "* $UTYPE Dev Lists - $CHK"
	
	svn list "$BRANCHES"| grep ^wsjtx | sed 's:/*$::' | sort > "$TMPD"/dev_list.txt
	echo "Back-To-Main-Menu" >> "$TMPD"/dev_list.txt
	
	# exclude some branches
	for i in "${dev_exclude_array[@]}"
	do
		sed -i '/^'"$i"'/d' "$TMPD"/dev_list.txt
	done
	
	# copy final menu to the config dir
	cp -u "$TMPD"/dev_list.txt "$CFG"

# Generate GA and RC List ------------------------------------------------------
	if [[ ! -f $CFG/ga_rc_list.txt ]] || [[ ! -f $CFG/time-stamp ]] ; then
		UTYPE='Generating'
	else 
		UTYPE='Updating'
	fi
	echo -e "* $UTYPE GA and RC List - $CHK"
	svn list "$TAGS" | grep "^wsjtx-[1-9]\.[5-9]\.[0-9]" | sed 's:/*$::' > "$TMPD"/ga_rc_list.txt
	echo "Back-To-Main-Menu" >> "$TMPD"/ga_rc_list.txt
	cp -u "$TMPD"/ga_rc_list.txt $CFG

# Generate Maintainer List -----------------------------------------------------
	if [[ ! -f $CFG/maint_list.txt ]] || [[ ! -f $CFG/time-stamp ]] ; then
		UTYPE='Generating'
	else 
		UTYPE='Updating'
	fi
	echo -e "* $UTYPE Maintainer List - $CHK"
	svn list "$TAGS" | grep "^wsjtx-[1-9]\.[5-9]\.[0-9]" | sed 's:/*$::' > "$TMPD"/maint_list.txt
	echo "Back-To-Main-Menu" >> "$TMPD"/maint_list.txt
	cp -u "$TMPD"/maint_list.txt $CFG

# Generate Superbuild Dev List -------------------------------------------------
	if [[ ! -f $CFG/sb_dev_list.txt ]] || [[ ! -f $CFG/time-stamp ]] ; then
		UTYPE='Generating'
	else 
		UTYPE='Updating'
	fi
	echo -e "* $UTYPE Superbuild Dev List - $CHK"

	svn list "$BRANCHES" | grep ^wsjtx | sed 's:/*$::' | sort > "$TMPD"/sb_dev_list.txt
	echo "Back-To-Main-Menu" >> "$TMPD"/sb_dev_list.txt
	
	# exclude some branches
	for i in "${dev_exclude_array[@]}"
	do
		sed -i '/^'"$i"'/d' "$TMPD"/sb_dev_list.txt
	done
	
	# copy final menu to the config dir
	cp -u "$TMPD"/sb_dev_list.txt "$CFG"
	
# Generate Superbuild GA and RC List -------------------------------------------
	if [[ ! -f $CFG/sb_ga_rc_list.txt ]] || [[ ! -f $CFG/time-stamp ]] ; then
		UTYPE='Generating'
	else 
		UTYPE='Updating'
	fi
	echo -e "* $UTYPE Superbuild GA and RC List - $CHK"

	svn list "$TAGS" | grep "^wsjtx-[1-9]\.[5-9]" | sed 's:/*$::' > "$TMPD"/sb_ga_rc_list.txt
	echo "Back-To-Main-Menu" >> "$TMPD"/sb_ga_rc_list.txt

	# copy final menu to the config dir
	cp -u "$TMPD"/sb_ga_rc_list.txt "$CFG"
	
	# create a time stamp file
	touch "$CFG"/time-stamp
	echo ''
	read -rp "Press [ ENTER ] to start the JTSDK Main Menu ...."
	
fi

}

# WSJT-X MAIN MENU -------------------------------------------------------------
wsjtx_main_menu() {
	dialog --ok-label SELECT \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "$WSJTXTITLE" \
	--menu "$MENUMSG" 0 50 0 \
	"1" "Development Branches" \
	"2" "GA and RC Candidates" \
	"3" "Superbuilds" \
	"4" "Maintainer" \
	"H" "Help" \
	"B" "Back-To-Main-Menu" 2> "$TMPD"/wsjtx_menu_select
	WSJTX_SELECT=$(head -c 1 < $TMPD/wsjtx_menu_select)
}

# WSJT-X DEVELOPMENT MENU ------------------------------------------------------
wsjtx_dev_menu() {

	# remove previous selections each time the function is called
	unset branch
	unset target
	clean_tmp
	
	# generate the list of development branches to select from
	dev_array=()
	while read -r a b ; do
		dev_array+=("$a" "$b")
	done < $CFG/dev_list.txt

	# select which ^/branches branch to build
	dialog 	--ok-label "Select" \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "  WSJT-X DEVELOPMENT SELECTION" \
	--menu "$MENUMSG" 0 55 0 "${dev_array[@]}" 2> "$TMPD"/dev_select.txt
	branch=$(head -1 < $TMPD/dev_select.txt)

	case "$branch" in
		Back*) # do nothing, back to main menu
			clean_tmp
			return 0
		;;
		
		*)
			# select what target to build
			dialog --ok-label SELECT \
			--no-cancel \
			--backtitle "$BACKTITLE" \
			--title "$WSJTXTITLE" \
			--menu "$MENUMSG" 0 50 0 \
			"1" "Release Target" \
			"2" "Debug Target" \
			"3" "User Guide" \
			"4" "Package" \
			"B" "Back-To-Main-Menu" 2> "$TMPD"/wsjtx_dev_target_select
			target=$(head -c 1 < $TMPD/wsjtx_dev_target_select)
		;;
	esac
	
	# now send the build command to jtsdk-wsjtx build script
	case $target in
		1) # build the release target
			jtsdk-wsjtx dev "$branch" Release
		;;

		2) # build the debug target
			jtsdk-wsjtx dev "$branch" Debug
		;;

		3) # build the user guide
			jtsdk-wsjtx dev "$branch" doc
		;;

		4) # build the distro package
			jtsdk-wsjtx dev "$branch" package
		;;
			
		Back*) # do nothing, back to main menu
			clean_tmp
			return 0
		;;
	esac
}

# GA and RELEASE CANDIDATES ----------------------------------------------------
wsjtx_ga_rc_menu() {

	# remove previous selections each time the function is called
	unset branch
	unset target
	clean_tmp

	# generate GA and RC list from ga_rc_lists.txt
	ga_rc_array=()
	while read -r a b ; do
		ga_rc_array+=("$a" "$b")
	done < $CFG/ga_rc_list.txt

	# select which ^/tags branch to build
	dialog 	--ok-label "Select" \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "  WSJT-X GA and RC SELECTION" \
	--menu "$MENUMSG" 0 55 0 "${ga_rc_array[@]}" 2> "$TMPD"/ga_rc_list.txt
	branch=$(head -1 < "$TMPD"/ga_rc_list.txt)

	case "$branch" in
		Back*) # do nothing, back to main menu
			clean_tmp
			return 0
		;;
		
		*)
			# select what target to build
			dialog --ok-label SELECT \
			--no-cancel \
			--backtitle "$BACKTITLE" \
			--title "$WSJTXTITLE" \
			--menu "$MENUMSG" 0 50 0 \
			"1" "Release Target" \
			"2" "Package" \
			"B" "Back-To-Main-Menu" 2> "$TMPD"/wsjtx_ga_rc_target_select.txt
			target=$(head -c 1 < "$TMPD"/wsjtx_ga_rc_target_select.txt)
		;;
	esac

	# if not back to main menu, send command to the build script
	case $target in
		Back*) # do nothing, back to main menu
			clean_tmp
			return 0
		;;
		
		1) # build the release target
			jtsdk-wsjtx garc "$branch" Release
		;;

		2) # build the debug target
			jtsdk-wsjtx garc "$branch" package
		;;
	esac

}

# SUPERBUILD MENU --------------------------------------------------------------
superbuild_menu() {

	# remove previous selections each time the function is called
	unset branch
	unset target
	clean_tmp

	# Superbuild Dev List Array
	sb_dev_array=()
	while read -r a b ; do
	    sb_dev_array+=("$a" "$b")
	done < $CFG/sb_dev_list.txt

	# Superbuild GA and RC List Array
	sb_ga_rc_array=()
	while read -r a b ; do
	    sb_ga_rc_array+=("$a" "$b")
	done < $CFG/sb_ga_rc_list.txt

	# display the superbuild main menu
	dialog --ok-label SELECT \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "$SBTITLE" \
	--menu "$MENUMSG" 0 50 0 \
	"1" "Development Branches" \
	"2" "GA and RC Candidates" \
	"B" "Back-To-Main-Menu" 2> "$TMPD"/sb_menu_select.txt
	SB_MENU_SELECT=$(head -c 1 < "$TMPD"/sb_menu_select.txt)

	# setup for either Dev, RC and GA-Release Branches
	case $SB_MENU_SELECT in
		Back*) # do nothing, back to main menu
			clean_tmp
			return 0
		;;

		1) # Development Branch Selection
			SBTITLE="  WSJT-X SUPERBUILD DEV"
			
			dialog 	--ok-label "Select" \
			--no-cancel \
			--backtitle "$BACKTITLE" \
			--title "$SBTITLE" \
			--menu "$MENUMSG" 0 55 0 "${sb_dev_array[@]}" 2> "$TMPD"/sb_select.txt
			branch=$(head -1 < "$TMPD"/sb_select.txt)
			
			# send command to the build sctipt
			case "$branch" in 
				B*) # do noting, back to main menu
					clean_tmp
					return 0
				;;
				
				*) 
					jtsdk-wsjtx-sb dev "$branch" build
				;;
			esac
		;;

		2) # GA and RC Candidates
			SBTITLE="  WSJT-X SUPERBUILD GA and RC"
			dialog 	--ok-label "Select" \
			--no-cancel \
			--backtitle "$BACKTITLE" \
			--title "$SBTITLE" \
			--menu "$MENUMSG" 0 55 0 "${sb_ga_rc_array[@]}" 2> "$TMPD"/sb_select.txt
			branch=$(head -1 < $TMPD/sb_select.txt)

			# send command to the build script
			case "$branch" in 
				Back*) # do nothing, back to main menu
					clean_tmp
					return 0
				;;
				
				*)
					jtsdk-wsjtx-sb garc "$branch" build
				;;
			esac
		
		;;

	esac

}

# GA and RELEASE CANDIDATES ----------------------------------------------------
maintainer_menu() {

# The maintainer selections are only from the GA and RC lists, e.g. ^/tags

	# remove previous selections each time the function is called
	unset branch
	unset target
	clean_tmp
	
	# generate GA and RC list from ga_rc_lists.txt
	maint_array=()
	while read -r a b ; do
		maint_array+=("$a" "$b")
	done < $CFG/maint_list.txt

	# select which ^/tags branch to build
	dialog 	--ok-label "Select" \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "  WSJT-X MAINTAINER SELECTION" \
	--menu "$MENUMSG" 0 55 0 "${maint_array[@]}" 2> "$TMPD"/maint_select.txt
	branch=$(head -1 < "$TMPD"/maint_select.txt)

	# send command to the build script
	case $branch in
		Back*) # do nothing, back to main menu
			clean_tmp
			return 0
		;;

		*) # build the release target
			jtsdk-wsjtx-sb garc "$branch" maintainer
		;;

	esac
}


################################################################################
#
# START MAIN SCRIPT
#
################################################################################

# set traps
trap sig_catch_cleanup SIGHUP SIGINT SIGQUIT SIGTERM SIGTSTP

# set shell options
set_options

# root check
root_chk

# dialog check
dialog_chk

# make directories
make_dirs

# generate dialog rc
make_dialogrc

# menu help files
HELP="$MENU"/main_menu_help.txt

# generate SB Dev, SB GA and RC lists from Sourceforge
generate_build_lists

# DRAW MAIN MENU ---------------------------------------------------------------
clear ||:
while [ 0 ]; do

dialog --ok-label SELECT \
--nocancel \
--backtitle "$BACKTITLE" \
--title "$MMTITLE" \
--menu "$MENUMSG" 0 50 0 \
"1" "WSJT" \
"2" "WSPR" \
"3" "WSJT-X" \
"4" "HAMLIB-3" \
"H" "Help" \
"E" "Exit" 2> "$TMPD"/selection
MAIN_SELECT=$(head -c 1 < $TMPD/selection)

# run fuction based on the users selection
case "$MAIN_SELECT" in
	1) # WSJT ------------------------------------------------------------------
		jtsdk-wsjt
		continue ;;

	2) # WSPR ------------------------------------------------------------------
		jtsdk-wspr
		continue ;;
	
	3) # WSJT-X ----------------------------------------------------------------
		wsjtx_main_menu

	# present build options based on wsjtx_main_menu selection
	case $WSJTX_SELECT in
		1) # Development Branch Builds
			wsjtx_dev_menu
			continue ;;
	
		2) # GA and Release Candidates Builds
			wsjtx_ga_rc_menu
			continue ;;

		3) # Superbuild Menu
			superbuild_menu
			continue ;;

		4) # Maintainer Build Options
			maintainer_menu
			continue ;;
		Back*) # do nothing, back to main menu
			clean_tmp
			continue ;;
	esac
	;;
		
	4) # HAMLIB-3 --------------------------------------------------------------
		jtsdk-hamlib3
		continue ;;

	H) # HELP ------------------------------------------------------------------
		main_menu_help
