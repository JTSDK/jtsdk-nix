# MAIN MENU HELP ---------------------------------------------------------------
main_menu_help() {

	dialog --exit-label DONE --backtitle "$BACKTITLE" --title "$HTITLE" --textbox "$HELP" 20 80

}


# WSJT-X MAIN MENU -------------------------------------------------------------
wsjtx_main_menu() {
	dialog --ok-label SELECT \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "$WSJTXTITLE" \
	--menu "$MENUMSG" 0 50 0 \
	"1" "Development" \
	"2" "Experimental" \
	"3" "Superbuilds" \
	"4" "GA Release" \
	"5" "Maintainer" \
	"H" "Help" \
	"R" "Return to Main Menu" 2> "$TMPD/wsjtx_menu_select"
	WSJTX_SELECT=$(head -c 1 < $TMPD/wsjtx_menu_select)
}


# WSJT-X DEVELOPMENT MENU ------------------------------------------------------
wsjtx_dev_options_menu() {
	dialog --ok-label SELECT \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "$WSJTXTITLE" \
	--menu "$MENUMSG" 0 50 0 \
	"1" "Release Target" \
	"2" "Debug Target" \
	"3" "User Guide" \
	"R" "Return to Main Menu" 2> "$TMPD/wsjtx_dev_target_select"
	WSJTX_DEV_TARGET=$(head -c 1 < $TMPD/wsjtx_dev_target_select)
	
		# now execuute the target build selection, calling jtsdk-wsjtx
		case $WSJTX_DEV_TARGET in
			1) # build the release target
			under_development ;;

			2) # build the debug target
				under_development ;;

			3) # build the user guide
				under_development ;;
		esac
}


# WSJT-X EXPERIMENTAL MENU -----------------------------------------------------
wsjtx_exp_options_menu() {
	dialog --ok-label SELECT \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "$WSJTXTITLE" \
	--menu "$MENUMSG" 0 50 0 \
	"1" "Release Target" \
	"2" "Debug Target" \
	"R" "Return to Main Menu" 2> "$TMPD/wsjtx_exp_target_select"
	WSJTX_EXP_TARGET=$(head -c 1 < $TMPD/wsjtx_exp_target_select)

	# now execuute the target build selection, calling jtsdk-wsjtx
	case $WSJTX_EXP_TARGET in
		1) # build the release target
		under_development ;;

		2) # build the debug target
		under_development ;;

		3) # build the user guide
		under_development ;;
	esac
}


# SUPERBUILD MENU --------------------------------------------------------------
superbuild_menu() {
	# display the superbuild main menu
	dialog --ok-label SELECT \
	--no-cancel \
	--backtitle "$BACKTITLE" \
	--title "$SBTITLE" \
	--menu "$MENUMSG" 0 50 0 \
	"1" "Development Branches" \
	"2" "GA Release Tags" \
	"R" "Return to Main Menu" 2> "$TMPD/sb_menu_select.txt"
	SB_MENU_SELECT=$(head -c 1 < $TMPD/sb_menu_select.txt)
	
	# setup for either Development Branches or Tagged GA Releases
	case $SB_MENU_SELECT in
		1) # Development Branch Selection
			SBTITLE=" WSJT-X SUPERBUILD DEV BRANCHES"
			BRANCH_OPTION="branches"
			svn list http://svn.code.sf.net/p/wsjt/wsjt/"$BRANCH_OPTION" | grep ^wsjtx |sed 's:/*$::' |sort > $TMPD/master.txt
		;;

		2) # build the debug target
			SBTITLE="  WSJT-X SUPERBUILD GA RELEASE"
			BRANCH_OPTION="tags"
			svn list http://svn.code.sf.net/p/wsjt/wsjt/"$BRANCH_OPTION" | grep ^wsjtx |sed 's:/*$::' |sort > $TMPD/master.txt
		;;

		*) # build the user guide
		return 0 ;;
	esac

	# loop through the exclude array and remove unwanted branches
	for i in "${exclude_array[@]}"
	do
		sed -i '/^'"$i"'/d' $TMPD/master.txt
	done
	
	# change the "wsjtx" branch display name to Development
	if [[ $BRANCH_OPTION = "branches" ]] ; then
		sed -i '1s/wsjtx/Development/g' $TMPD/master.txt
	fi
	
	# generate the menu entries from master.txt
	menu_array=()
	while read a b ; do
	    menu_array+=("$a" "$b")
	done < $TMPD/master.txt

	# display the menu selection dialog box
	dialog --backtitle "$BACKTITLE" \
	--title "$SBTITLE" \
	--ok-label "Select" \
	--menu "$MENUMSG" 0 55 0 "${menu_array[@]}" 2> $TMPD/sb_select.txt
	SB_SELECT=$(head -1 < $TMPD/sb_select.txt)

	# for testing only, comment out for release
	clear ||:
	echo ''
	echo "You Selected ..........: $SB_SELECT"
	echo "Available Selections ..: ${menu_array[@]}"
	echo ''
	read -p "Press [ Enter ] to continue ... "

}


################################################################################
#
# START MAIN SCRIPT
#
################################################################################

# set traps
trap sig_catch_cleanup SIGHUP SIGINT SIGQUIT SIGTERM SIGTSTP

# set shell options
set_options

# root check
root_chk

# dialog check
dialog_chk

# make directories
make_dirs

# generate dialog rc
make_dialogrc

# menu help files
HELP="$MENU"/main_menu_help.txt
WSJTXHELP="$MENU"/wsjtx_menu_help.txt
WSJTXRCHELP="$MENU"/wsjtxrc_menu_help.txt
WSJTXEXPHELP="$MENU"/wsjtxexp_menu_help.txt

# DRAW MAIN MENU ---------------------------------------------------------------
clear ||:
while [ 0 ]; do

dialog --ok-label SELECT \
--nocancel \
--backtitle "$BACKTITLE" \
--title "$MMTITLE" \
--menu "$MENUMSG" 0 50 0 \
"1" "WSJT" \
"2" "WSPR" \
"3" "WSJT-X" \
"4" "HAMLIB-3" \
"H" "Help" \
"E" "Exit" 2> "$TMPD/selection"
MAIN_SELECT=$(head -c 1 < $TMPD/selection)

# run fuction based on the users selection
case "$MAIN_SELECT" in
	1) # WSJT ------------------------------------------------------------------
	under_development	
	continue ;;

	2) # WSPR ------------------------------------------------------------------
	under_development	
	continue ;;
	
	3) # WSJT-X ----------------------------------------------------------------
	wsjtx_main_menu

	# present build options based on wsjtx_main_menu selection
	case $WSJTX_SELECT in
		1) # Development build options
		wsjtx_dev_options_menu
		continue ;;
	
		2) # Experimental build options
		wsjtx_exp_options_menu
		continue ;;

		3) # Superbuild options
		superbuild_menu
		continue ;;

		4) # GA-Release build options
		under_development
		continue ;;

		5) # Maintainer build options
		under_development
		continue ;;
	esac
	;;
	
	4) # HAMLIB-3 --------------------------------------------------------------
	under_development
	continue ;;

	H) # HELP ------------------------------------------------------------------
	main_menu_help
	continue ;;

	E) # EXIT JTSDK ------------------------------------------------------------
	clean_exit ;;
esac

done

