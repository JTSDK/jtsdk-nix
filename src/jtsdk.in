# exit on error
set -e

################################################################################
#
# VARIABLE SECTION
#
################################################################################

# host informaiton and apps
HOST_OS=@HOST_OS@
HOST_CPU=@HOST_CPU@

# set home and directory paths
HOMEDIR=~/jtsdk
MENU=@SHARE@
SRCD="$HOMEDIR/src"
